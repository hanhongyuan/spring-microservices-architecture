<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <!--
        Account Microservice core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="sergio11">
        <createTable tableName="ACCOUNTS">
            <!-- Account Id -->
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Account Firstname -->
            <column name="firstName" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account Lastname -->
            <column name="lastName" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account email -->
            <column name="email" type="varchar(90)">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- Account Status -->
            <column name="status" type="varchar(20)">
                <constraints unique="false" nullable="false"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_account_email"
            tableName="ACCOUNTS"
            unique="true">
            <column name="email" type="varchar(90)"/>
        </createIndex>
        
        <createIndex indexName="idx_account_status"
            tableName="ACCOUNTS"
            unique="false">
            <column name="status" type="varchar(20)"/>
        </createIndex>
        
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/data/accounts.csv"
                  separator=";"
                  tableName="ACCOUNTS">
        </loadData>
        
    </changeSet>

</databaseChangeLog>
